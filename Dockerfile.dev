# Dockerfile.dev - Next.js dev with Turbopack
FROM node:22-alpine

# Set working directory
WORKDIR /app

# Copy dependency files and install dependencies
COPY package*.json ./
RUN npm ci

# Expose the dev server port
EXPOSE 3000

# Keep node_modules inside the container (host mount wonâ€™t overwrite them)
VOLUME [ "/app/node_modules" ]

# Default command to run dev server with Turbopack, binding to all interfaces
CMD ["npm", "run", "dev"]
